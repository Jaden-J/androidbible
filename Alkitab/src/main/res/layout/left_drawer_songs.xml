<?xml version="1.0" encoding="utf-8"?>

<view
	class="yuku.alkitab.base.widget.LeftDrawer$Songs"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="240dp"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
    android:background="#263238"
    android:elevation="4dp"
	tools:context="yuku.alkitab.base.ac.SongViewActivity"
	tools:ignore="Overdraw">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:showDividers="middle">

		<include
			layout="@layout/left_drawer_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="48dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/bChangeBook"
				style="@style/Widget.AppCompat.Spinner"
				android:layout_width="@dimen/song_keypad_button_one_and_half_width"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="––––"
				android:textSize="18sp"
				tools:ignore="HardcodedText" />

			<TextView
				android:id="@+id/bChangeCode"
				android:layout_width="@dimen/song_keypad_button_one_and_half_width"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="––––"
				android:textAppearance="?android:textAppearanceLarge"
				android:textSize="18sp"
				tools:ignore="HardcodedText" />

			<ImageButton
				android:id="@+id/bBackspace"
				style="@style/SongCodeKeypadButton"
				android:src="@drawable/ic_song_keypad_backspace"
				android:scaleType="center" />
		</LinearLayout>


		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			tools:ignore="HardcodedText">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bDigit1"
					style="@style/SongCodeKeypadButton"
					android:text="1" />

				<Button
					android:id="@+id/bDigit2"
					style="@style/SongCodeKeypadButton"
					android:text="2" />

				<Button
					android:id="@+id/bDigit3"
					style="@style/SongCodeKeypadButton"
					android:text="3" />

				<Button
					android:id="@+id/bDigitA"
					style="@style/SongCodeKeypadButton"
					android:text="A" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bDigit4"
					style="@style/SongCodeKeypadButton"
					android:text="4" />

				<Button
					android:id="@+id/bDigit5"
					style="@style/SongCodeKeypadButton"
					android:text="5" />

				<Button
					android:id="@+id/bDigit6"
					style="@style/SongCodeKeypadButton"
					android:text="6" />

				<Button
					android:id="@+id/bDigitB"
					style="@style/SongCodeKeypadButton"
					android:text="B" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bDigit7"
					style="@style/SongCodeKeypadButton"
					android:text="7" />

				<Button
					android:id="@+id/bDigit8"
					style="@style/SongCodeKeypadButton"
					android:text="8" />

				<Button
					android:id="@+id/bDigit9"
					style="@style/SongCodeKeypadButton"
					android:text="9" />

				<Button
					android:id="@+id/bDigitC"
					style="@style/SongCodeKeypadButton"
					android:text="C" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">

				<Button
					android:id="@+id/bDigit0"
					style="@style/SongCodeKeypadButton"
					android:text="0"
					android:layout_marginLeft="@dimen/song_keypad_button_width" />

				<Button
					android:id="@+id/bOk"
					style="@style/SongCodeKeypadButton.DoubleWidth"
					android:text="OK"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>

		<include
			layout="@layout/left_drawer_footer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</LinearLayout>

</view>